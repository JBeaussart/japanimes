 <% @animes.each do |anime| %>
  <div class="card" data-toggle="tooltip" data-placement="right" title="Lorem ipsum dolor">  
    <div class="cards-img-container">
      <%= image_tag('manga1.jpg', alt: 'manga1.jpg', class: "card-img")%>
    </div>
    <div class="card-description">
      <h1 class="title"><%= anime.title %></h1>
      <% if current_user != nil %>
        <p class="heart-card"><i class="far fa-heart"></i></p>
      <% end %>
      <p class="rating">
        <!-- <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="far fa-star"></i> -->
        <%= "#{anime.rating} / 5" %>
      </p>
    </div>
  </div>
<% end %>