<div class="container">
  <div class="row">
    <% @animes.each do |anime| %>
      <div class="card m-4" data-toggle="tooltip" data-placement="right" data-html="true" title="Description: <%= anime.description %> <br><br> Date de parution:  <%= anime.parution_date %>">  

        <div class="cards-img-container">
          <%= image_tag('manga2.png', alt: 'manga1.png', class: "card-img")%>
        </div>

        <div class="card-description">
          <h1 class="title-card"><%= anime.title %></h1>
          <% if current_user != nil %>
            <div class="like"></div>
          <% end %>

          <p class="rating">
            <% anime.rating.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
            <% anime.blank_stars.times do %>
              <i class="far fa-star"></i>
            <% end %>
          </p>   
        </div>
      </div>
    <% end %>
  </div>
 </div>
 