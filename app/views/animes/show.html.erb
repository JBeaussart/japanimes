<body class="show_body"></body>
<div class="anime-show-container">
  <div class="image-anime-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @anime.photo.key, crop: :fill %>')">
  </div>
  <div class="anime-description-streaming-show">
    <div class="anime-info-show">
      <div class="anime-title-like-heart-show">
        <h1 class="anime-title-show font-family-title"><%= @anime.title %></h1>
        <div class="like_heart">
          <% if current_user != nil %>
            <% if @anime.in?(current_user.animes) %>
              <%= link_to watchlist_anime_path(@watchlist), method: :delete do%>
                <i class="fas fa-heart fa-3x"></i>
              <% end %>
            <% else %>
              <%= link_to anime_watchlist_animes_path(@anime), method: :post do %>
                <i class="far fa-heart fa-3x"></i>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <p class="description_anime_show"><%= @anime.description %></p>
      <div class="anime-date-genre-note-show">
        <div class="note-globale-show-anime">
          <p class="title-colored mb-0">Note globale</p>
          <p class="rating">
            <% @anime.rating.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
            <% @anime.blank_stars.times do %>
              <i class="far fa-star"></i>
            <% end %>
          </p>
        </div>
        <div class="date-show-anime">
          <p class="title-colored mb-0">Date de diffusion</p>
          <p><%= @anime.parution_date %></p>
        </div>
        <div class="genre-show-anime">
          <p class="title-colored mb-0">Genre</p>
          <p><%= @anime.category %></p>
        </div>
      </div>
    </div>
    <div class="plateform-show-anime">
      <h2 class="anime-title-show dispo-on">Disponible sur:</h2>
      <p class="d-inline"><%= logo_streaming_service(@anime.streaming_service) %>
        <%= link_to "https://www.crunchyroll.com/fr/jujutsu-kaisen", target:"_blank" do %>
          <p class="btn btn-light ml-4 btn-lg"><span class="text-dark">Visionner <i class="fas fa-play ml-2"></i></span></p>
        <% end %>
      </p>
    </div>
  </div>
</div>
<div class="pred">
  <div class="commentary-prediction-anime-show">
    <h1 class="title_prediction mb-4">Théories</h1>
    <div class="card-product">
      <%= image_tag 'joseph.jpg' %>
      <div class="card-product-infos">
        <div class="card_user_info mr-5">
          <h2>Joseph <span class="date_card_theory"> (20/02/2021)</span> <span class="rank_font ml-2" id="rank_theory">Apprenti </span></h2>
          <p>Les fléaux vont sceller Gojo c’est sur !</p>
        </div>
        <div class="upvote ml-5">
          <p class="button" id="minus">-</p>
          <p id="count">99</p>
          <p class="button" id="plus">+</p>
        </div>
      </div>
    </div>
    <div class="card-product">
      <%= image_tag 'thomas.png' %>
      <div class="card-product-infos">
        <div class="card_user_info mr-5">
          <h2>Thomas<span class="date_card_theory"> (21/02/2021)</span><span class="rank_font ml-2">Apprenti</span></h2>
          <p>Todo = best perso ever !</p>
        </div>
        <div class="upvote ml-5">
          <p class="button" id="minus">-</p>
          <p id="count">6</p>
          <p class="button" id="plus">+</p>
        </div>
      </div>
    </div>
    <div class="card-product">
      <%= image_tag 'fabien.png' %>
      <div class="card-product-infos">
        <div class="card_user_info mr-5">
          <h2>Fabien<span class="date_card_theory"> (26/02/2021)</span><span class="rank_font ml-2">Apprenti</span></h2>
          <p>J’adore l’opening !</p>
        </div>
        <div class="upvote ml-5">
          <p class="button" id="minus">-</p>
          <p id="count">27</p>
          <p class="button" id="plus">+</p>
        </div>
      </div>
    </div>
    <%# ------------------------------------------------------- %>
    <div id="quentin_comments" class="card-product">
      <%= image_tag 'quentin.png' %>
      <div class="card-product-infos">
        <div class="card_user_info mr-5">
          <h2>Quentin<span class="date_card_theory"> (27/03/2021)</span><span class="rank_font ml-2">Apprenti</span></h2>
          <p><span class="text-primary">@Joseph</span> t'es un genie</p>
        </div>
        <div class="upvote ml-5">
          <p class="button" id="minus">-</p>
          <p id="count">0</p>
          <p class="button" id="plus">+</p>
        </div>
      </div>
    </div>
    <%# ------------------------------------------------------- %>
    <div class="d-flex flex-row w-100 mt-3">
      <input class="w-100" type="text" placeholder="Partagez votre théorie">
      <div id="fake_post" class="btn btn-dark">Envoyer</div>
    </div>
  </div>
</div>
