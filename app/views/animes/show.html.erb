<body class="show_body"></body>

<div class="anime-show-container">

  <div class="img-anime-show">
    <%= cl_image_tag @anime.photo.key, class: "card-img-show" %>
  </div>

  <div class="anime-description-commentary">

    <div class="description-show-anime">

      <h1 class="anime-title-show text-light"><%= @anime.title %></h1>

      <div class="like_heart">
        <% if current_user != nil %>
          <% if @anime.in?(current_user.animes) %>
            <%= link_to watchlist_anime_path(@watchlist), method: :delete do%>
              <i class="fas fa-heart"></i>
            <% end %>
          <% else %>
            <%= link_to anime_watchlist_animes_path(@anime), method: :post do %>
              <i class="far fa-heart"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="caret-description"></i></div>

      <p class="text-light"><%= @anime.description %></p>

      <div class="anime-info">
        <div class="note-globale-show-anime">
          <p class="text-light mb-0">Note globale</p>
          <p class="rating">
              <% @anime.rating.times do  %>
                <i class="fas fa-star"></i>
              <% end %>
              <% @anime.blank_stars.times do %>
                <i class="far fa-star"></i>
              <% end %>
          </p>   
        </div>  
        
        <div class="date-genre-anime-show">
          <div class="mr-5">
            <p class="text-light mb-0">Date de diffusion</p>
            <p><%= @anime.parution_date %></p>
          </div>
          <div class="genre-show-anime">
            <p class="text-light mb-0">Genre</p>
            <p><%= @anime.category %></p>
          </div>
        </div>

      </div>
    </div>

        <div class="plateform-show-anime">
          <h2 class="anime-title-show text-light">Disponible sur :</i></h2>
          <p class="text-light mb-0">Plateforme</p>
          <p><%= @anime.streaming_service %><button type="button" class="btn btn-link btn-light">Visualiser</button></p>
        </div>

  </div>
</div>

<div class="commentary-anime">
  <div class="caret-commentary"></div>
    <h2 class="mb-4 text-secondary">Commentaires</h2>
      <ul>
        <li class="h5 mb-3"><span class="text-secondary">Guillaume:</span> Un classique - indemodable </li>
        <li class="h5 mb-3"><span class="text-secondary">Benjamin:</span> Toute mon enfance !</li>
        <li class="h5 mb-3"><span class="text-secondary">Nicolas:</span> La base :) </li>
      </ul>
</div>
